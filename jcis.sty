				\else
          {\large \ \ \ 副担当教員 }
					{\large \@subAdviserFirst}
				\fi
%				{\large \@subAdviserFirst}
%                                % \def\null{null}
				\ifx\@subAdviserSecond\null
				\else
					{\large ・ \@subAdviserSecond}
				\fi
				\ifx\@subAdviserThird\null
				\else
					{\large ・ \@subAdviserThird}
				\fi
			\end{singlespace}
		\end{flushright}
		\vspace{4mm}
	]
